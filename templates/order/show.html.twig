{% extends 'base.html.twig' %}

{% block title %}Order
{% endblock %}

{% block body %}
	<h1>Order</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ order.id }}</td>
			</tr>
			<tr>
				<th>StartDate</th>
				<td>{{ order.startDate ? order.startDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>IsArchived</th>
				<td>{{ order.isArchived }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('order_index') }}">back to list</a>

	<a href="{{ path('order_edit', {'order': order.id}) }}">edit</a>

	{{ include('order/_delete_form.html.twig') }}
