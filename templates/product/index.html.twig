{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	{% include "_partials/_flash_message.html.twig" %}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>UnitPrice</th>
				<th>Supplier</th>
				<th>StartDate</th>
				<th>EndDate</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>IsArchived</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.unitPrice }}</td>
					<td>{{ product.supplier }}</td>
					<td>{{ product.startDate ? product.startDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.endDate ? product.endDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.isArchived }}</td>
					<td>
						<a href="{{ path('product_show', {'product': product.id}) }}">show</a>
						<a href="{{ path('product_edit', {'product': product.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
